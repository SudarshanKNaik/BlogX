<!DOCTYPE html>
<html lang="en">
<head>
<%- include('./partials/head') %>
<title><%= blog.title %> - BlogX</title>
<!-- design-system + Tailwind classes are used instead of inline styles -->
</head>
<body>
<%- include('./partials/nav') %>

<div class="container mx-auto px-4 py-8">
  <a href="/" class="inline-block btn-primary mb-6"><i class="fas fa-arrow-left mr-2"></i> Back to All Blogs</a>

  <div class="card overflow-hidden">
    <% if (blog.coverImageURL) { %>
      <img src="<%= blog.coverImageURL %>" alt="<%= blog.title %>" class="w-full h-96 object-cover">
    <% } %>

    <div class="p-8">
      <h1 class="text-4xl font-display font-bold mb-4"><%= blog.title %></h1>

      <div class="flex flex-wrap items-center gap-4 text-muted">
        <div class="flex items-center gap-2"><i class="fas fa-user"></i> <span><%= blog.createdBy?.fullName || 'Anonymous' %></span></div>
        <div class="flex items-center gap-2"><i class="fas fa-calendar"></i> <span><%= new Date(blog.createdAt).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></span></div>
        <div class="flex items-center gap-2"><i class="fas fa-clock"></i> <span><%= Math.ceil(blog.body.split(' ').length / 200) %> min read</span></div>
        <% if (user && blog.createdBy && user._id.toString() === blog.createdBy._id.toString()) { %>
          <div class="ml-auto">
            <button class="btn-danger radius-lg px-3 py-2" onclick="deleteBlog('<%= blog._id %>')"> <i class="fas fa-trash"></i> Delete</button>
          </div>
        <% } %>
      </div>

      <div class="mt-6 prose max-w-none text-lg text-gray-800"><%= blog.body %></div>
    </div>
  </div>

  <section class="mt-8">
    <div class="card p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-2xl font-semibold">Comments</h2>
        <span class="px-3 py-1 rounded-full bg-muted text-muted-foreground"><%= comments ? comments.length : 0 %> comments</span>
      </div>

      <% if (user) { %>
        <form id="commentForm" class="mb-4">
          <textarea id="commentContent" name="content" class="w-full p-3 border rounded-md" placeholder="Share your thoughts on this blog..." required></textarea>
          <div class="mt-3 text-right">
            <button type="submit" class="btn-primary px-4 py-2"> <i class="fas fa-paper-plane mr-2"></i> Post Comment</button>
          </div>
        </form>
      <% } else { %>
        <div class="alert alert-info">Please <a href="/user/signin">sign in</a> to leave a comment.</div>
      <% } %>

      <div id="commentsList">
        <% if (comments && comments.length > 0) { %>
          <% comments.forEach(comment => { %>
            <div class="border-l-4 border-muted p-4 mb-3">
              <div class="flex items-center justify-between mb-2">
                <div class="font-semibold"><i class="fas fa-user-circle mr-2"></i><%= comment.createdBy?.fullName || 'Anonymous' %></div>
                <div class="text-sm text-muted"><%= new Date(comment.createdAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %></div>
              </div>
              <p><%= comment.content %></p>
            </div>
          <% }) %>
        <% } else { %>
          <div class="text-center p-8 text-muted">
            <i class="fas fa-comments text-3xl mb-2"></i>
            <h4 class="text-xl">No comments yet</h4>
            <p>Be the first to share your thoughts!</p>
          </div>
        <% } %>
      </div>
    </div>
  </section>
</div>

<%- include('./partials/scripts') %>

<script>
// Comment form submission
document.getElementById('commentForm')?.addEventListener('submit', async function(e) {
  e.preventDefault();
  
  const formData = new FormData(this);
  const content = formData.get('content').trim();
  
  if (!content) {
    alert('Please enter a comment');
    return;
  }
  
  const submitBtn = this.querySelector('button[type="submit"]');
  const originalText = submitBtn.innerHTML;
  submitBtn.innerHTML = '<span class="loading"></span> Posting...';
  submitBtn.disabled = true;
  
  try {
    const response = await fetch('/blog/<%= blog._id %>/comment', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ content })
    });
    
    if (response.ok) {
      // Reload page to show new comment
      window.location.reload();
    } else {
      const error = await response.json();
      alert(error.message || 'Failed to post comment');
    }
  } catch (error) {
    console.error('Error posting comment:', error);
    alert('Failed to post comment. Please try again.');
  } finally {
    submitBtn.innerHTML = originalText;
    submitBtn.disabled = false;
  }
});

// Delete blog function
async function deleteBlog(blogId) {
  if (!confirm('Are you sure you want to delete this blog? This action cannot be undone.')) {
    return;
  }
  
  try {
    const response = await fetch(`/blog/${blogId}/delete`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json',
      }
    });
    
    if (response.ok) {
      alert('Blog deleted successfully!');
      window.location.href = '/';
    } else {
      const error = await response.json();
      alert(error.message || 'Failed to delete blog');
    }
  } catch (error) {
    console.error('Error deleting blog:', error);
    alert('Failed to delete blog. Please try again.');
  }
}
</script>
</body>
</html>