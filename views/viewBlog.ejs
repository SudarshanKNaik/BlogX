<!DOCTYPE html>
<html lang="en">
<head>
<%- include('./partials/head') %>
<title><%= blog.title %> - BlogX</title>
<style>
/* Modern Blog View Styles */
.blog-view-container {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
  padding-top: 2rem;
}

.blog-header {
  background: linear-gradient(135deg, #6c757d 0%, #adb5bd 50%, #868e96 100%);
  color: white;
  padding: 2rem 0;
  margin-bottom: 2rem;
}

.blog-content {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 15px;
  box-shadow: 0 8px 25px rgba(0,0,0,0.08);
  margin-bottom: 2rem;
  overflow: hidden;
  border: 1px solid rgba(108, 117, 125, 0.1);
}

.blog-image {
  width: 100%;
  height: 400px;
  object-fit: cover;
  border-radius: 15px 15px 0 0;
}

.blog-body {
  padding: 3rem;
}

.blog-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 1rem;
  line-height: 1.2;
}

.blog-meta {
  display: flex;
  align-items: center;
  gap: 2rem;
  margin-bottom: 2rem;
  padding-bottom: 1rem;
  border-bottom: 2px solid #f8f9fa;
}

.blog-meta-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: #6c757d;
  font-size: 1rem;
}

.blog-meta-item i {
  color: #6c757d;
}

.blog-content-text {
  font-size: 1.1rem;
  line-height: 1.8;
  color: #495057;
  white-space: pre-wrap;
}

/* Comments Section */
.comments-section {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 15px;
  box-shadow: 0 8px 25px rgba(0,0,0,0.08);
  padding: 2rem;
  margin-bottom: 2rem;
  border: 1px solid rgba(108, 117, 125, 0.1);
}

.comments-header {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 2rem;
  padding-bottom: 1rem;
  border-bottom: 2px solid #f8f9fa;
}

.comments-title {
  font-size: 1.8rem;
  font-weight: 600;
  color: #2c3e50;
  margin: 0;
}

.comments-count {
  background: #6c757d;
  color: white;
  padding: 0.3rem 0.8rem;
  border-radius: 20px;
  font-size: 0.9rem;
  font-weight: 500;
}

/* Comment Form */
.comment-form {
  background: #f8f9fa;
  border-radius: 10px;
  padding: 1.5rem;
  margin-bottom: 2rem;
}

.comment-form textarea {
  border: 2px solid #e9ecef;
  border-radius: 10px;
  padding: 1rem;
  font-size: 1rem;
  resize: vertical;
  min-height: 100px;
  transition: border-color 0.3s ease;
}

.comment-form textarea:focus {
  border-color: #6c757d;
  box-shadow: 0 0 0 0.2rem rgba(108, 117, 125, 0.25);
  outline: none;
}

.comment-form .btn {
  --button_radius: 0.70em;
  --button_color: #adb5bd;
  --button_outline_color: #6c757d;
  font-size: 17px;
  font-weight: bold;
  border: none;
  cursor: pointer;
  border-radius: var(--button_radius);
  background: var(--button_outline_color);
  padding: 0;
  transition: all 0.3s ease;
}

.comment-form .btn:hover {
  transform: translateY(-2px);
}

.comment-form .button_top {
  display: block;
  box-sizing: border-box;
  border: 2px solid var(--button_outline_color);
  border-radius: var(--button_radius);
  padding: 0.7em 1.2em;
  background: var(--button_color);
  color: white;
  transform: translateY(-0.2em);
  transition: transform 0.1s ease;
  text-decoration: none;
}

.comment-form .btn:hover .button_top {
  transform: translateY(-0.33em);
  background: #868e96;
}

.comment-form .btn:active .button_top {
  transform: translateY(0);
}

/* Individual Comments */
.comment {
  background: #f8f9fa;
  border-radius: 10px;
  padding: 1.5rem;
  margin-bottom: 1rem;
  border-left: 4px solid #6c757d;
  transition: transform 0.3s ease;
}

.comment:hover {
  transform: translateX(5px);
}

.comment-header {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1rem;
}

.comment-author {
  font-weight: 600;
  color: #2c3e50;
  font-size: 1rem;
}

.comment-date {
  color: #6c757d;
  font-size: 0.9rem;
}

.comment-content {
  color: #495057;
  line-height: 1.6;
  margin: 0;
}

.no-comments {
  text-align: center;
  padding: 3rem 0;
  color: #6c757d;
}

.no-comments i {
  font-size: 3rem;
  margin-bottom: 1rem;
  color: #dee2e6;
}

/* Back Button */
.back-button {
  --button_radius: 0.70em;
  --button_color: #d4de95; /* button color */
  --button_outline_color: #3D4127; /* hover gradient */
  font-size: 17px;
  font-weight: bold;
  border: none;
  cursor: pointer;
  border-radius: var(--button_radius);
  background: var(--button_outline_color);
  padding: 0;
  transition: all 0.3s ease;
  margin-bottom: 3rem;
  margin-top: 1rem;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
}

.back-button:hover {
  transform: translateY(-2px);
}

.back-button .button_top {
  display: block;
  box-sizing: border-box;
  border: 2px solid var(--button_outline_color);
  border-radius: var(--button_radius);
  padding: 0.7em 1.2em;
  background: var(--button_color);
  color: white;
  transform: translateY(-0.2em);
  transition: transform 0.1s ease;
  text-decoration: none;
}

.back-button:hover .button_top {
  transform: translateY(-0.33em);
  background: #868e96;
}

.back-button:active .button_top {
  transform: translateY(0);
}

/* Blog Actions */
.blog-actions {
  margin-left: auto;
}

.btn-danger {
  --button_color: #dc3545;
}


.btn-danger:hover .button_top {
  background: #c82333;
}

/* Responsive Design */
@media (max-width: 768px) {
  .blog-body {
    padding: 2rem 1.5rem;
  }
  
  .blog-title {
    font-size: 2rem;
  }
  
  .blog-meta {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }
  
  .comments-section {
    padding: 1.5rem;
  }
  
  .comment-form {
    padding: 1rem;
  }
}

/* Loading Animation */
.loading {
  display: inline-block;
  width: 20px;
  height: 20px;
  border: 3px solid #f3f3f3;
  border-top: 3px solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
</style>
</head>
<body>
<%- include('./partials/nav') %>

<div class="blog-view-container">
  <div class="container">
    <!-- Back Button -->
    <a href="/" class="back-button">
      <span class="button_top">
        <i class="fas fa-arrow-left"></i> Back to All Blogs
      </span>
    </a>

    <!-- Blog Content -->
    <div class="blog-content">
      <% if (blog.coverImageURL) { %>
        <img src="<%= blog.coverImageURL %>" alt="<%= blog.title %>" class="blog-image">
      <% } %>
      
      <div class="blog-body">
        <h1 class="blog-title"><%= blog.title %></h1>
        
        <div class="blog-meta">
          <div class="blog-meta-item">
            <i class="fas fa-user"></i>
            <span><%= blog.createdBy?.fullName || 'Anonymous' %></span>
          </div>
          <div class="blog-meta-item">
            <i class="fas fa-calendar"></i>
            <span><%= new Date(blog.createdAt).toLocaleDateString('en-US', { 
              weekday: 'long', 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            }) %></span>
          </div>
          <div class="blog-meta-item">
            <i class="fas fa-clock"></i>
            <span><%= Math.ceil(blog.body.split(' ').length / 200) %> min read</span>
          </div>
          <% if (user && blog.createdBy && user._id.toString() === blog.createdBy._id.toString()) { %>
            <div class="blog-actions">
              <button class="btn btn-danger" onclick="deleteBlog('<%= blog._id %>')">
                <span class="button_top">
                  <i class="fas fa-trash"></i> Delete Blog
                </span>
              </button>
            </div>
          <% } %>
        </div>
        
        <div class="blog-content-text"><%= blog.body %></div>
      </div>
    </div>

    <!-- Comments Section -->
    <div class="comments-section">
      <div class="comments-header">
        <h2 class="comments-title">Comments</h2>
        <span class="comments-count" id="commentsCount">
          <%= comments ? comments.length : 0 %> comments
        </span>
      </div>

      <!-- Comment Form -->
      <% if (user) { %>
        <form class="comment-form" id="commentForm">
          <div class="mb-3">
            <label for="commentContent" class="form-label">Leave a comment</label>
            <textarea 
              class="form-control" 
              id="commentContent" 
              name="content" 
              placeholder="Share your thoughts on this blog..."
              required
            ></textarea>
          </div>
          <button type="submit" class="btn" 
          style="--button_color:#d4de95; --button_outline_color:#3D4127;">
          <span class="button_top">
            <i class="fas fa-paper-plane"></i> Post Comment
          </span>
        </button>
        
        </form>
      <% } else { %>
        <div class="alert alert-info">
          <i class="fas fa-info-circle"></i>
          Please <a href="/user/signin">sign in</a> to leave a comment.
        </div>
      <% } %>

      <!-- Comments List -->
      <div id="commentsList">
        <% if (comments && comments.length > 0) { %>
          <% comments.forEach(comment => { %>
            <div class="comment">
              <div class="comment-header">
                <div class="comment-author">
                  <i class="fas fa-user-circle"></i>
                  <%= comment.createdBy?.fullName || 'Anonymous' %>
                </div>
                <div class="comment-date">
                  <%= new Date(comment.createdAt).toLocaleDateString('en-US', { 
                    month: 'short', 
                    day: 'numeric', 
                    year: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                  }) %>
                </div>
              </div>
              <p class="comment-content"><%= comment.content %></p>
            </div>
          <% }) %>
        <% } else { %>
          <div class="no-comments">
            <i class="fas fa-comments"></i>
            <h4>No comments yet</h4>
            <p>Be the first to share your thoughts!</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/scripts') %>

<script>
// Comment form submission
document.getElementById('commentForm')?.addEventListener('submit', async function(e) {
  e.preventDefault();
  
  const formData = new FormData(this);
  const content = formData.get('content').trim();
  
  if (!content) {
    alert('Please enter a comment');
    return;
  }
  
  const submitBtn = this.querySelector('button[type="submit"]');
  const originalText = submitBtn.innerHTML;
  submitBtn.innerHTML = '<span class="loading"></span> Posting...';
  submitBtn.disabled = true;
  
  try {
    const response = await fetch('/blog/<%= blog._id %>/comment', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ content })
    });
    
    if (response.ok) {
      // Reload page to show new comment
      window.location.reload();
    } else {
      const error = await response.json();
      alert(error.message || 'Failed to post comment');
    }
  } catch (error) {
    console.error('Error posting comment:', error);
    alert('Failed to post comment. Please try again.');
  } finally {
    submitBtn.innerHTML = originalText;
    submitBtn.disabled = false;
  }
});

// Delete blog function
async function deleteBlog(blogId) {
  if (!confirm('Are you sure you want to delete this blog? This action cannot be undone.')) {
    return;
  }
  
  try {
    const response = await fetch(`/blog/${blogId}/delete`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json',
      }
    });
    
    if (response.ok) {
      alert('Blog deleted successfully!');
      window.location.href = '/';
    } else {
      const error = await response.json();
      alert(error.message || 'Failed to delete blog');
    }
  } catch (error) {
    console.error('Error deleting blog:', error);
    alert('Failed to delete blog. Please try again.');
  }
}
</script>
</body>
</html>