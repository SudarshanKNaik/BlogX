<!DOCTYPE html>
<html lang="en">
<head>
<%- include('./partials/head') %>
<title>BlogX - Discover Amazing Stories</title>
<style>
/* === Warm Orange Theme === */
body {

        background:linear-gradient(135deg, #6292a5 0%, #878181 100%);
        ; /* page background */
      
      
  min-height: 100vh;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

/* Hero Section */
.hero-section {
    background: linear-gradient(135deg, #a1d8ee 0%, #878181 100%); /* hero gradient */
    color: white;
    text-align: center;
    padding: 80px 0;
    margin-bottom: 50px;
    position: relative;
    overflow: hidden;
}

.hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0.15;
}

.hero-section .container {
    position: relative;
    z-index: 1;
}

.hero-section h1 {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    font-weight: 800;
    text-shadow: 2px 2px 6px rgba(0,0,0,0.3);
}

.hero-section p {
    font-size: 1.4rem;
    margin-bottom: 2.5rem;
    opacity: 0.95;
}

/* Blog Cards */
.blog-card {
    background: linear-gradient(135deg, #278b9b 0%, #ecf8fc 100%); /* white cards */
    border-radius: 20px;
    box-shadow: 0 6px 20px rgba(220, 88, 109, 0.15);
    overflow: hidden;
    margin-bottom: 2rem;
    transition: all 0.4s ease;
    border: 1px solid rgba(220, 88, 109, 0.2);
}

.blog-card:hover {
    transform: translateY(-12px) scale(1.02);
    box-shadow: 0 25px 50px rgba(220, 88, 109, 0.25);
}

.blog-image {
    width: 100%;
    height: 250px;
    object-fit: cover;
    transition: transform 0.4s ease;
}

.blog-card:hover .blog-image {
    transform: scale(1.1);
}

.blog-content {
    padding: 1rem;
}

.blog-title {
    font-size: 1.8rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #1E293B; /* unchanged */
    line-height: 1.3;
}

.blog-excerpt {
    color: #475569;
    margin-bottom: 1.5rem;
    line-height: 1.7;
    font-size: 1rem;
}

.blog-meta {
    font-size: 0.95rem;
    color: #57707A; /* author color unchanged */
    border-top: 2px solid #0f0803; /* blend with background */
    padding-top: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
}

.blog-meta strong {
    color: #57707A;
}

.no-blogs {
    text-align: center;
    padding: 5rem 0;
    color: #1E293B;
    background: rgba(220, 88, 109, 0.05);
    border-radius: 20px;
    margin: 2rem 0;
}

.no-blogs h3 {
    margin-bottom: 1.5rem;
    font-size: 2.5rem;
    color: #77696b;
}

.no-blogs p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    opacity: 0.9;
}

@media (max-width: 768px) {
    .hero-section h1 {
        font-size: 2.5rem;
    }
    
    .hero-section {
        padding: 60px 0;
    }
    
    .blog-content {
        padding: 1.5rem;
    }
    
    .blog-meta {
        flex-direction: column;
        align-items: flex-start;
    }
}

/* === Custom Button CSS === */
.btn {
    --button_radius: 0.70em;
    --button_color: #d4de95; /* button color */
    --button_outline_color: #3D4127; /* hover gradient */
    font-size: 17px;
    font-weight: bold;
    border: none;
    cursor: pointer;
    border-radius: var(--button_radius);
    background: var(--button_outline_color);
    padding: 0;
    transition: all 0.3s ease;
}

.button_top {
    display: block;
    box-sizing: border-box;
    border: 2px solid var(--button_outline_color);
    border-radius: var(--button_radius);
    padding: 0.7em 1.2em;
    background: var(--button_color);
    color: rgb(255, 255, 255);
    transform: translateY(-0.2em);
    transition: transform 0.1s ease;
    text-decoration: none;
}

.btn:hover .button_top {
    transform: translateY(-0.33em);
    background: #464932; /* hover shade */
}

.btn:active .button_top {
    transform: translateY(0);
}

.btn-primary .button_top {
    background: #d4de95 ;
    color: rgb(255, 255, 255);
}

.btn-primary:hover .button_top {
    background: #3D4127;
}

/* Animation for cards */
.blog-card {
    animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Stagger animation for multiple cards */
.blog-card:nth-child(1) { animation-delay: 0.1s; }
.blog-card:nth-child(2) { animation-delay: 0.2s; }
.blog-card:nth-child(3) { animation-delay: 0.3s; }
.blog-card:nth-child(4) { animation-delay: 0.4s; }
.blog-card:nth-child(5) { animation-delay: 0.5s; }
.blog-card:nth-child(6) { animation-delay: 0.6s; }

/* Container styling */
.container {
    position: relative;
    z-index: 1;
}
</style>
</head>
<body>
<%- include('./partials/nav') %>

<% if (!locals.user) { %>
<section class="hero-section">
    <div class="container">
        <h1>Welcome to BlogX</h1>
        <p>Share your thoughts, stories, and ideas with the world</p>
        <a href="/user/signup" class="btn"><span class="button_top">Join BlogX Today</span></a>
    </div>
</section>
<% } %>

<div class="container mt-4">
    <% if (locals.user) { %>
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Latest Blog Posts</h2>
            <a href="/blog/add-new" class="btn">
                <span class="button_top"><i class="bi bi-plus-circle"></i> Write New Blog</span>
            </a>
        </div>
    <% } else { %>
        <h2 class="text-center text-white mb-4">Latest Blog Posts</h2>
    <% } %>
    
    <% if (blogs && blogs.length > 0) { %>
        <div class="row">
            <% blogs.forEach(blog => { %>
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="blog-card">
                        <% if (blog.coverImageURL) { %>
                            <img src="<%= blog.coverImageURL %>" alt="<%= blog.title %>" class="blog-image">
                        <% } %>
                        <div class="blog-content">
                            <h3 class="blog-title"><%= blog.title %></h3>
                            <p class="blog-excerpt">
                                <%= blog.body.length > 150 ? blog.body.substring(0, 150) + '...' : blog.body %>
                            </p>
                            <div class="blog-meta">
                                <div>
                                    <strong>By:</strong> <%= blog.createdBy?.fullName || 'Anonymous' %>
                                </div>
                                <div>
                                    <small><%= new Date(blog.createdAt).toLocaleDateString('en-US', { 
                                        year: 'numeric', 
                                        month: 'short', 
                                        day: 'numeric' 
                                    }) %></small>
                                </div>
                            </div>
                            <div class="mt-3">
                                <a href="/blog/<%= blog._id %>" class="btn btn-primary w-100">
                                    <span class="button_top"><i class="fas fa-eye"></i> Read More</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="no-blogs">
            <h3>No blog posts yet!</h3>
            <p>Be the first to share your thoughts with the world.</p>
            <% if (locals.user) { %>
                <a href="/blog/add-new" class="btn"><span class="button_top">Write First Blog</span></a>
            <% } else { %>
                <a href="/user/signup" class="btn"><span class="button_top">Sign Up to Write</span></a>
            <% } %>
        </div>
    <% } %>
</div>

<%- include('./partials/scripts') %>
</body>
</html>
