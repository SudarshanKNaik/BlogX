<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Sign In - BlogX</title>
    <!-- design-system + Tailwind classes used; removed inline styles -->
</head>
<body>
    <%- include('./partials/nav') %>
    
    <div class="container">
        <div class="card mx-auto mt-8 p-8 max-w-md">
            <div class="auth-header">
                <h2 class="text-2xl font-display font-bold"><i class="fas fa-sign-in-alt"></i> Welcome Back</h2>
                <p class="text-muted">Sign in to continue your journey</p>
            </div>
            
            <% if (locals.error) { %>
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle"></i>
                    <%= locals.error %>
                </div>
            <% } %>

            <form action="/user/signin" method="post" class="space-y-4">
                <div>
                    <label for="email" class="form-label block mb-2"><i class="fas fa-envelope"></i> Email Address</label>
                    <input type="email" name="email" id="email" required class="w-full p-3 border rounded-md" placeholder="Enter your email address">
                </div>

                <div>
                    <label for="password" class="form-label block mb-2"><i class="fas fa-lock"></i> Password</label>
                    <input type="password" name="password" id="password" required class="w-full p-3 border rounded-md" placeholder="Enter your password">
                </div>

                <div class="text-right">
                    <button type="submit" class="btn-primary px-4 py-2"> <i class="fas fa-sign-in-alt mr-2"></i> Sign In</button>
                </div>
            </form>
            
            <div class="auth-link">
                <p>Don't have an account? <a href="/user/signup">Sign up here</a></p>
            </div>
        </div>
    </div>

    <%- include('./partials/scripts') %>
</body>
</html>