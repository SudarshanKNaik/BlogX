<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Sign In - BlogX</title>
</head>
<body>
    <div class="bg-animation">
        <div class="bg-animation-overlay"></div>
    </div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>

    <%- include('./partials/nav') %>
    
    <section class="page-section narrow">
        <div class="container">
        <div class="card mx-auto max-w-md">
            <div class="auth-header">
                <h2 class="text-2xl font-display font-bold"><i class="fas fa-sign-in-alt"></i> Sign In</h2>
                <p class="text-muted">We're excited to see what you'll share next.</p>
            </div>
            
            <% if (locals.error) { %>
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle"></i>
                    <%= locals.error %>
                </div>
            <% } %>

            <form action="/user/signin" method="post" class="space-y-4">
                <div>
                    <label for="email" class="form-label"><i class="fas fa-envelope"></i> Email Address</label>
                    <input type="email" name="email" id="email" required placeholder="Enter your email address">
                </div>

                <div>
                    <label for="password" class="form-label"><i class="fas fa-lock"></i> Password</label>
                    <input type="password" name="password" id="password" required placeholder="Enter your password">
                </div>

                <div class="text-right">
                    <button type="submit" class="btn btn-primary"> <i class="fas fa-sign-in-alt mr-2"></i> Sign In</button>
                </div>
            </form>
            
            <div class="auth-link">
                <p>Don't have an account? <a href="/user/signup">Sign up here</a></p>
            </div>
        </div>
        </div>
    </section>

    <%- include('./partials/scripts') %>
</body>
</html>
